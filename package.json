{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "./src/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --reporter=text --reporter=html mocha ./src/**/*.test.js",
    "start": "node ./src/index.js",
    "lint": "eslint ./src/**/*.js --fix",
    "pre-push": "yarn lint && yarn test"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.16.4",
    "sqlite3": "4.0.6"
  },
  "devDependencies": {
    "eslint": "6.7.2",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.1.0",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
